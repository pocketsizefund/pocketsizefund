#!/usr/bin/env sh

# mise description="run in docker compose"
# mise tools=["docker"]

service_name=$1

if [ "$service_name" = "pricemodel" ]; then
    echo "temporarily skipping"
    exit 0
fi

docker compose \
    --file $root/platform/${service_name}/compose.yaml \
    --env-file $root/etc/.env.development \
    up \
    --build \
    --watch \
    --wait
