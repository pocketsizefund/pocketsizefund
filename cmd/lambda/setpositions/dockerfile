FROM public.ecr.aws/lambda/python:3.11-arm64

RUN yum clean all

RUN yum install -y gcc python3-devel

COPY cmd/lambda/setpositions/requirements.txt ${LAMBDA_TASK_ROOT}/requirements.txt

RUN pip3 install --requirement requirements.txt --target "${LAMBDA_TASK_ROOT}"

COPY pkg/trade/trade.py ${LAMBDA_TASK_ROOT}/pkg/trade/trade.py

COPY pkg/model/model.py ${LAMBDA_TASK_ROOT}/pkg/model/model.py

COPY cmd/lambda/setpositions/main.py ${LAMBDA_TASK_ROOT}/main.py

ENV DARQUBE_API_KEY=""

ENV ALPACA_API_KEY=""

ENV ALPACA_API_SECRET=""

ENV ALPHA_VANTAGE_API_KEY=""

ENV MODEL_ENDPOINT_NAME=""

ENV IS_PAPER=""

CMD [ "main.handler" ]
